# AI Header Commenter Configuration Example
# Copy this file to config.yaml and fill in your actual values

# Google Gemini API Configuration
api_key: "your_google_gemini_api_key_here"  # Get from https://makersuite.google.com/app/apikey

# Server Configuration
host: "127.0.0.1"  # Local development
port: 8000          # Default port

# CORS Configuration
allowed_origins:
  - "http://localhost:3000"  # VS Code Extension
  - "http://127.0.0.1:3000"
  - "https://your-domain.com"  # Add your production domain if needed

# AI Model Configuration
model_name: "gemini-2.0-flash-exp"  # Latest Gemini model
max_tokens: 2048                     # Maximum response length

# Security Notes:
# - NEVER commit config.yaml to version control
# - Keep your API key secure
# - Use environment variables in production
# - This file is already in .gitignore
